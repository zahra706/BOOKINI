{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 60px auto;
        padding: 30px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    h1 {
        font-size: 26px;
        margin-bottom: 30px;
        color: #333;
        text-align: center;
    }

    .comment {
        background-color: #f9f9f9;
        border-left: 4px solid #4a90e2;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        color: #444;
    }

    .comment strong {
        color: #2c3e50;
    }

    form {
        margin-top: 30px;
    }

    button[type="submit"] {
        background-color: #4a90e2;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 15px;
        cursor: pointer;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #357ab8;
    }

    .form-control {
        margin-bottom: 15px;
    }

    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
    }
    .navbar {
        display: flex;
        justify-content: space-between; /* Espacement entre logo et menu */
        align-items: center;
        background-color: #343a40; /* Couleur sombre pour la navbar */
        padding: 15px 30px; /* Padding pour espacer les éléments */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre légère */
        border-radius: 8px; /* Coins arrondis */
        transition: box-shadow 0.3s ease, background-color 0.3s ease; /* Transition fluide */
      }
      
      .navbar:hover {
        background-color: #495057; /* Couleur de fond plus claire au survol */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Ombre plus marquée */
      }
      
      /* Logo */
      .navbar .logo a {
        font-size: 1.6rem;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease; /* Transition fluide pour la couleur */
      }
      
      .navbar .logo a:hover {
        color: #f8f9fa; /* Couleur plus claire au survol */
      }
      
      /* Menu */
      .menu {
        list-style: none; /* Supprimer les puces */
        padding: 0;
        margin: 0;
        display: flex; /* Menu en ligne */
        gap: 30px; /* Espacement entre les éléments */
      }
      
      .menu li {
        display: inline-block;
      }
      
      .menu a {
        color: white;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        padding: 5px 15px;
        border-radius: 4px; /* Coins arrondis pour les liens */
        transition: background-color 0.3s ease, color 0.3s ease; /* Animation fluide */
      }
      
      .menu a:hover {
        background-color: #007bff; /* Couleur de fond au survol */
        color: #fff; /* Couleur du texte au survol */
      }
      
      /* Réduire la navbar en mobile */
      @media (max-width: 768px) {
        .navbar {
          flex-direction: column;
          align-items: flex-start;
        }
      
        .menu {
          display: none; /* Cacher le menu sur mobile */
          flex-direction: column;
          width: 100%;
        }
      
        .menu.active {
          display: flex; /* Afficher le menu si la classe active est ajoutée */
        }
      
        .menu a {
          padding: 10px 0;
          text-align: left;
          width: 100%;
        }
      
        .navbar .logo a {
          font-size: 1.4rem; /* Réduire la taille du logo sur mobile */
        }
      }
      
      /* Menu burger */
      .navbar .navbar-toggler {
        background: none;
        border: none;
        display: block;
        cursor: pointer;
      }
      
      .navbar .navbar-toggler span {
        background-color: white;
        width: 25px;
        height: 3px;
        display: block;
        margin: 5px 0;
        transition: all 0.3s ease;
      }
      
      /* Animation du menu burger (rotation) */
      .navbar .navbar-toggler.active span:nth-child(1) {
        transform: rotate(45deg);
        transform-origin: 0 0;
      }
      
      .navbar .navbar-toggler.active span:nth-child(2) {
        opacity: 0;
      }
      
      .navbar .navbar-toggler.active span:nth-child(3) {
        transform: rotate(-45deg);
        transform-origin: 0 100%;
      }
      /* Style global du footer */
.footer {
background-color: #343a40; /* Fond sombre pour le footer */
color: #ffffff; /* Couleur du texte */
padding: 20px 30px;
text-align: center;
box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1); /* Ombre subtile */
border-top: 2px solid #007bff; /* Bordure en haut avec une couleur bleue */
font-size: 0.9rem;
margin-top: 30px;
transition: background-color 0.3s ease, color 0.3s ease;
}

/* Effet au survol du footer */
.footer:hover {
background-color: #495057; /* Couleur plus claire au survol */
color: #f8f9fa; /* Texte plus clair au survol */
}

/* Style des icônes sociales */
.social-icons {
list-style: none;
padding: 0;
margin: 15px 0 0;
display: flex;
justify-content: center; /* Centrer les icônes */
gap: 20px; /* Espacement entre les icônes */
}

.social-icons li {
display: inline-block;
}

.social-icons a {
text-decoration: none;
color: #ffffff; /* Couleur des icônes */
font-size: 1.5rem; /* Taille des icônes */
transition: transform 0.3s ease, color 0.3s ease;
}

/* Effet au survol des icônes sociales */
.social-icons a:hover {
color: #007bff; /* Couleur bleue au survol */
transform: translateY(-5px); /* Effet de déplacement au survol */
}

/* Ajouter les icônes FontAwesome (si tu les utilises) */
.social-icons i {
margin-right: 8px;
font-size: 1.3rem; /* Ajuster la taille des icônes */
}
.image-rounded {
  width: 60px; /* Redimensionne l'image */
  height: auto; /* Garde le ratio de l'image */
  border-radius: 15px; /* Coins arrondis */
  border: 3px solid #ccc; /* Bordure grise */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre légère */
}
.image-rounded-icon {
  width: 50px; /* Redimensionne l'image */
  height: auto; /* Garde le ratio de l'image */
  border-radius: 50px; /* Coins arrondis */
  border: 3px solid #ccc; /* Bordure grise */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre légère */
}
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Commentaires pour "{{ livre.titre }}"</h1>

    {% for commentaire in livre.commentaires %}
        <div class="comment">
            <strong>{{ commentaire.user.email }}</strong> :<br>
            {{ commentaire.texte }}
        </div>
    {% else %}
        <p>Aucun commentaire pour ce livre.</p>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Ajouter un commentaire</button>
    {{ form_end(form) }}
</div>
{% endblock %}
